# Elova Docker Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DATABASE_TYPE=postgresql
POSTGRES_PASSWORD=secure_db_password_change_this
POSTGRES_PORT=5432

# Authentication
AUTH_TYPE=simple
AUTH_SECRET=your-super-secure-secret-minimum-32-characters-long-change-this

# n8n Integration (Optional)
N8N_HOST=https://your-n8n-instance.com
N8N_API_KEY=your-n8n-api-key

# Sync Configuration
SYNC_EXECUTIONS=15m
SYNC_WORKFLOWS=6h  
SYNC_BACKUPS=24h

# Feature Flags
DEMO_MODE=false
DEV_AUTH=false

# Optional: Redis Configuration
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_PORT=6379

# Optional: Proxy Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Supabase Configuration (if using Supabase auth)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security
CORS_ORIGIN=https://your-domain.com